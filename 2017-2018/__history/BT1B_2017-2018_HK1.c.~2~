#INCLUDE<16F887.H>
#FUSES INTRC
#USE DELAY(CLOCK=8M)

#BIT TMR1IF = 0X0B.2
#DEFINE ON        PIN_B0
#DEFIME OFF       PIN_B1
#DEFINE PULSE     PIN_C1

VOID MAIN()
{
   SET_TRIS_B(0XFF);
   SET_TRIS_C(0X00);
   //SETUP_TIMER0 DINH THOI GIAN
   SETUP_TIMER_0(T0_INTERNAL|T0_DIV_8)
   //DINH THOI 1MS: 6 BC8
   //DINH THOI 7MS=1MSx7 -> HIGH
   //DINH THOI 3MS=1MSx3 -> LOW
   SET_TIMER0(6);
   OUTPUT_HIGH(PULSE);
   UNSIGNED INT8 COUNT;
   WHILE(TRUE)
   {
      IF(TMR1IF==1)
      {
         //1MS
         COUNT++;
         SET_TIMER0(6);
         TMR1IF=0;
         
         IF(COUNT<=7)   OUTPUT_HIGH(PULSE);
         IF(COUNT<10)   OUTPUT_LOW(PULSE);
         ELSE           COUNT=0;
      }
   }
}
