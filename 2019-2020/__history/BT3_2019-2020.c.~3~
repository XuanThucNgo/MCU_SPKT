#INCLUDE<16F887.H>
#DEVICE ADC=10
#FUSES HS
#USE DELAY(CLOCK=20M)

#USE RS232 (BAUD=9600,XMIT=PIN_C6,RCV=PIN_C7)

#DEFINE RUN PIN_D0
#DEFINE STOP PIN_D1
#DEFINE STATUS PIN_D2

UNSIGNED CHAR RXDATA=0;

VOID MAIN()
{
   SET_TRIS_D(0X0F);
   SET_TRIS_C(0X0F);
   
   WHILE(TRUE)
   {
      IF(KBHIT()==1)
      {
         RXDATA=GETC();      
      }
      IF(RXDATA=='1')
      IF(RXDATA=='2')
   }
}
