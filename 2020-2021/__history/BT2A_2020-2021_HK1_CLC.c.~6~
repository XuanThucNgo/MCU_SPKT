//HE THONG A
#INCLUDE<16F887.H>
#FUSES HS
#USE DELAY(CLOCK=10M)
#USE RS232(BAUD=19200,BITS=8,STOP=1,PARITY=N, XMIT=PIN_C6,RCV=PIN_C7)

#DEFINE 0  PIN_B0
#DEFINE 1  PIN_B1
#DEFINE 2  PIN_B2
#DEFINE 3  PIN_B3
#DEFINE 4  PIN_B4

VOID MAIN()
{
   SET_TRIS_B(0XFF);
   SET_TRIS_C(0X80);
   WHILE(TRUE)
   {
      IF(INPUT(0)==0)      PUTC(0X00);
      IF(INPUT(1)==0)      PUTC(0X01);
      IF(INPUT(2)==0)      PUTC(0X02);
      IF(INPUT(3)==0)      PUTC(0X03);
      IF(INPUT(4)==0)      PUTC(0X04);
   }
}
